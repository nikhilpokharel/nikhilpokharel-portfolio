<!-- @format -->

<main class="main login-register">
  <div class="col-md-6 m-auto alert-messages">
    <p class="alert">Alert Messages</p>
  </div>
  <section class="login-register-page wrapper">
    <img src="/public/images/right-vector.svg" class="right-vector" />
    <div class="heading">
      <h2 class="request-for">Login</h2>
    </div>
    <form
      action="/user/login"
      class="col-md-6 m-auto user-form login-form"
      method="POST"
    >
      <div class="form-group">
        <label for="email">Email </label>
        <input type="email" class="form-control" name="email" />
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" class="form-control" name="password" />
      </div>
      <div class="form-group">
        <input type="submit" class="form-btn" value="Login" />
      </div>
      <div class="form-group dialog">
        <a href="/">Back to home</a>
      </div>
    </form>
  </section>
</main>
