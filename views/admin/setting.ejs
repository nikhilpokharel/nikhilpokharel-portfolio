<main class="main-container container-fluid">
  <section class="col-md-11 ml-auto">
    <div class="heading">
      <h2>Account Setting</h2>
    </div>

    <h4 class="home-heading">
      Current Details / <a href="/user/register">Add New Member</a>
    </h4>
    <form action="/user/update-user?_method=PUT" method="POST">
      <div class="form-group">
        <input
          type="text"
          value="<%- adminDetails.fullName %>"
          name="fullName"
          class="form-control form-input-fields mb-1"
        />
      </div>
      <div class="form-group">
        <input
          type="email"
          value="<%- adminDetails.email %>"
          class="form-control form-input-fields mb-1"
          name="email"
        />
      </div>
      <div class="form-group">
        <button type="submit" class="btn-submit">Change</button>
      </div>
    </form>
    <h4 class="home-heading">To Change Password</h4>
    <form method="POST" action="/user/update-credentials?_method=PUT">
      <div class="from-group">
        <% if(incorrectPassword.length) {%>
        <p class="text-danger small">
          <%- incorrectPassword %>
        </p>
        <% } %>
        <input
          type="string"
          class="form-control form-input-fields mb-1"
          name="oldPassword"
          placeholder="enter your old password"
        />
        <input
          type="string"
          class="form-control form-input-fields mb-1"
          placeholder="enter new password"
          name="newPassword"
          minlength="8"
        />
      </div>
      <div class="form-group my-3">
        <button type="submit" class="btn-submit">Update Details</button>
      </div>
    </form>
  </section>
</main>
